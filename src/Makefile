all:
	@echo "Building netsniff-ng ..."
	@cd netsniff-ng; $(MAKE) $(MFLAGS)
	@echo "Building trafgen ..."
	@cd trafgen; $(MAKE) $(MFLAGS)
	@echo "Building curvetun ..."
	@cd curvetun; $(MAKE) $(MFLAGS)
	@echo "Building ifpps ..."
	@cd ifpps; $(MAKE) $(MFLAGS)
	@echo "Building ashunt ..."
	@cd ashunt; $(MAKE) $(MFLAGS)

clean:
	@echo "Cleaning netsniff-ng ..."
	@cd netsniff-ng; $(MAKE) $(MFLAGS) clean
	@echo "Cleaning trafgen ..."
	@cd trafgen; $(MAKE) $(MFLAGS) clean
	@echo "Cleaning curvetun ..."
	@cd curvetun; $(MAKE) $(MFLAGS) clean
	@echo "Cleaning ifpps ..."
	@cd ifpps; $(MAKE) $(MFLAGS) clean
	@echo "Cleaning ashunt ..."
	@cd ashunt; $(MAKE) $(MFLAGS) clean

install:
	@echo "Installing netsniff-ng ..."
	@cd netsniff-ng; $(MAKE) $(MFLAGS) install
	@echo "Installing trafgen ..."
	@cd trafgen; $(MAKE) $(MFLAGS) install
	@echo "Installing curvetun ..."
	@cd curvetun; $(MAKE) $(MFLAGS) install
	@echo "Installing ifpps ..."
	@cd ifpps; $(MAKE) $(MFLAGS) install
	@echo "Installing ashunt ..."
	@cd ashunt; $(MAKE) $(MFLAGS) install

uninstall:
	@echo "Uninstalling netsniff-ng ..."
	@cd netsniff-ng; $(MAKE) $(MFLAGS) uninstall
	@echo "Uninstalling trafgen ..."
	@cd trafgen; $(MAKE) $(MFLAGS) uninstall
	@echo "Uninstalling curvetun ..."
	@cd curvetun; $(MAKE) $(MFLAGS) uninstall
	@echo "Uninstalling ifpps ..."
	@cd ifpps; $(MAKE) $(MFLAGS) uninstall
	@echo "Uninstalling ashunt ..."
	@cd ashunt; $(MAKE) $(MFLAGS) uninstall

